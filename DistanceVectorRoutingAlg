#include <stdio.h>
#define INF 999
#define MAX 10

int main() {
    int n;
    int cost[MAX][MAX], dist[MAX][MAX], nextHop[MAX][MAX];
    int updated;

    printf("Enter number of nodes: ");
    scanf("%d", &n);

    printf("Enter adjacency matrix (use 999 for no link, 0 for self):\n");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            scanf("%d", &cost[i][j]);

    
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++) {
            dist[i][j] = cost[i][j];
            nextHop[i][j] = (cost[i][j] != INF && i != j) ? j : -1;
        }

 
    do {
        updated = 0;
        for (int i = 0; i < n; i++)
            for (int j = 0; j < n; j++)
                for (int k = 0; k < n; k++)
                    if (dist[i][j] > cost[i][k] + dist[k][j]) {
                        dist[i][j] = cost[i][k] + dist[k][j];
                        nextHop[i][j] = k;
                        updated = 1;
                    }
    } while (updated);

    
    for (int i = 0; i < n; i++) {
        printf("\nRouting Table for Node %c:\n", 'A' + i);
        printf("Dest\tNextHop\tCost\n");
        for (int j = 0; j < n; j++) {
            if (i == j) continue;
            printf("  %c\t  ", 'A' + j);
            if (nextHop[i][j] != -1)
                printf("%c\t", 'A' + nextHop[i][j]);
            else
                printf("-\t");
            if (dist[i][j] == INF)
                printf("INF\n");
            else
                printf("%d\n", dist[i][j]);
        }
    }

    return 0;
}
